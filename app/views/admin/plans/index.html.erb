<%= render "shared/search", url: admin_plans_path, search_parameter: "name" %>
<div class="List">
  <div class="row">
    <h3 class="List-title">Listing Plans</h3>
    <div class="column">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Start time</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.name %></td>
              <td><%= plan.price %> â‚¬</td>
              <td><%= plan.discount %> %</td>
              <td><%= plan.custom_format_date %></td>
              <td><%= link_to 'Show', admin_plan_path(plan) %></td>
              <td><%= link_to 'Edit', edit_admin_plan_path(plan) %></td>
              <td><%= link_to 'Destroy', admin_plan_path(plan), method: :delete, data: { confirm: 'Are you sure? Participants associated with this plan are also deleted.' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p>
        <%= link_to 'New Plan', new_admin_plan_path %>
      </p>
    </div>
  </div>
</div>
<%= will_paginate @plans, renderer: BootstrapPagination::Rails %>

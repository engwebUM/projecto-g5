<section class="Homepage">
	<div class="Homepage-logo">
	  <%= image_tag("logo.png", :alt => "logo") %>
	  <p class="Homepage-slogan">The most precious Ruby Conference in the world!</p>
	 </div>

	<%= javascript_include_tag 'participants/validate-form' %>

	<%= render 'admin/participants/form', participant: @participant, url: participants_path %>

	<script type='text/javascript'>
	  validateForm($("#new_participant"));
	</script>

	<div class="Homepage-plans">
		<div class="container">
			<div class="col-md-4 text-center">
			  	<div class="panel panel-success panel-pricing panel-early">
			  		<div class="panel-heading"><h3>Early Bird</h3></div>
				  	<div class="panel-body text-center"><p><strong>150€</strong></p></div>
				  	<div class="list-group-item"><p>Ends on June 10th (Limited to 100 Tickets)</p></div>
			  	</div>
			</div>

			<div class="col-md-4 text-center">
			  	<div class="panel panel-success panel-pricing panel-regular">
			  		<div class="panel-heading"><h3>Regular Ticket</h3></div>
				  	<div class="panel-body text-center"><p><strong>200€</strong></p></div>
				  	<div class="list-group-item"><p>Starts on June 11th</p></div>
			  	</div>
			</div>
			
			<div class="col-md-4 text-center">
			  	<div class="panel panel-success panel-pricing panel-late">
			  		<div class="panel-heading"><h3>Late Ticket</h3></div>
				  	<div class="panel-body text-center"><p><strong>250€</strong></p></div>
				  	<div class="list-group-item"><p>Starts on August 13th</p></div>
			  	</div>
			</div>
		</div>	
	</div>	
	<div class="Homepage-footer">
		<p>14-15 September</p>
	    <p>Braga, Portugal</p>
	</div>

</section>

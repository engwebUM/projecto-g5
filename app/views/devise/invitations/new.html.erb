<h2><%= t "devise.invitations.new.header" %></h2>
<div class="col-sm-6">
	<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => "form-inline"} do |f| %>
	  
	  <div class="form-group">
			<% resource.class.invite_key_fields.each do |field| -%>
			  <%= f.text_field field, class: 'form-control', placeholder: 'Email' %>
			<% end -%>
			<div class="alert-danger"><%= devise_error_messages! %></div>
		</div>

  	<%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
	<% end %>
</div>	
